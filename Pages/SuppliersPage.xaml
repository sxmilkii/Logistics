<Page x:Class="LogisticsWPF.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставщики">

    <Grid Background="{DynamicResource BackgroundColor}">
        <StackPanel Margin="10">
            <TextBlock Text="Справочник поставщиков" FontSize="22" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Добавить" Width="80" Margin="0,0,10,0" Click="AddButton_Click" Height="25"/>
                <Button Content="Редактировать" Width="100" Margin="0,0,10,0" Click="EditButton_Click" Height="25"/>
                <Button Content="Удалить" Width="80" Click="DeleteButton_Click" Height="25"/>
            </StackPanel>

            <DataGrid x:Name="SuppliersDataGrid" AutoGenerateColumns="False" Height="500"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="*"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                    <DataGridTextColumn Header="Надежность" Binding="{Binding ReliabilityRating}" Width="*"/>
                    <DataGridTextColumn Header="Условия оплаты" Binding="{Binding PaymentTerms}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>