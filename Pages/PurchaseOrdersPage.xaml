<Page x:Class="LogisticsWPF.Pages.PurchaseOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Закупки">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Закупки" FontSize="22" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="120" Height="25" Click="Add_Click"/>
            <Button Content="Редактировать" Width="120" Height="25" Margin="10,0" Click="Edit_Click"/>
            <Button Content="Приёмка" Width="120" Height="25" Click="Receipt_Click"/>
            <Button Content="Остатки на складе" Width="150" Height="25" Margin="10,0" Click="StockBalances_Click"/>
        </StackPanel>

        <DataGrid x:Name="OrdersGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Suppliers.Name}" Width="*"/>
                <DataGridTextColumn Header="Склад" Binding="{Binding Warehouses.Name}" Width="*"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Ожидается" Binding="{Binding ExpectedDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding PurchaseStatuses.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Page>