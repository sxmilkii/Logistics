<Page x:Class="LogisticsWPF.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Продукция">

    <Grid Background="{DynamicResource BackgroundColor}">
        <DockPanel Margin="10">
            <StackPanel Margin="10">
                <TextBlock Text="Справочник продукции" FontSize="22" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                    <Button Content="Добавить" Width="85" Margin="5" Click="AddButton_Click" Height="25"/>
                    <Button Content="Редактировать" Width="100" Margin="5" Click="EditButton_Click" Height="25"/>
                    <Button Content="Удалить" Width="80" Margin="5" Click="DeleteButton_Click" />
                </StackPanel>
                <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="False" 
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="*"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding ProductCategories.Name}" Width="*"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                    <DataGridTextColumn Header="Ед. изм." Binding="{Binding Units.Name}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding ProductStatuses.Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>