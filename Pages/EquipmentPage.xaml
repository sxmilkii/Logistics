<Page x:Class="LogisticsWPF.Pages.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Оборудование">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <TextBlock Text="Справочник оборудования" FontSize="22" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Height="25" Click="Add_Click"/>
            <Button Content="Редактировать" Width="100" Height="25" Margin="10,0" Click="Edit_Click"/>
            <Button Content="Удалить" Width="100" Height="25" Click="Delete_Click"/>
        </StackPanel>

            <DataGrid x:Name="EquipmentGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  ColumnWidth="*"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Инв. номер"
                                    Binding="{Binding InventoryNumber}"/>

                    <DataGridTextColumn Header="Модель"
                                    Binding="{Binding Models.Name}"/>

                    <DataGridTextColumn Header="Тип"
                                    Binding="{Binding EquipmentTypes.Name}"/>

                    <DataGridTextColumn Header="Дата ввода"
                                    Binding="{Binding CommissionDate, StringFormat=d}"/>

                    <DataGridTextColumn Header="Статус"
                                    Binding="{Binding EquipmentStatuses.Name}"/>

                    <DataGridTextColumn Header="Профилактика"
                                    Binding="{Binding MaintenanceSchedule}"
                                    Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>