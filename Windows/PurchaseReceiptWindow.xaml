<Window x:Class="LogisticsWPF.Windows.PurchaseReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приёмка"
        Width="350"
        Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <StackPanel Margin="20">

        <TextBlock Text="Принято"/>
        <TextBox x:Name="AcceptedTextBox"/>

        <TextBlock Text="Брак" Margin="0,10,0,0"/>
        <TextBox x:Name="DefectTextBox"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Сохранить" Width="100" Height="25" Click="Save_Click"/>
            <Button Content="Отмена" Width="100" Height="25" Margin="10,0,0,0" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>