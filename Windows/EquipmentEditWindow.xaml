<Window x:Class="LogisticsWPF.Windows.EquipmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оборудование"
        Width="400"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Инвентарный номер"/>
            <TextBox x:Name="InventoryTextBox"/>

            <TextBlock Text="Модель" Margin="0,10,0,0"/>
            <ComboBox x:Name="ModelComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="ModelID"/>

            <TextBlock Text="Тип" Margin="0,10,0,0"/>
            <ComboBox x:Name="TypeComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="EquipmentTypeID"/>

            <TextBlock Text="Дата ввода" Margin="0,10,0,0"/>
            <DatePicker x:Name="CommissioningDatePicker"/>

            <TextBlock Text="Статус" Margin="0,10,0,0"/>
            <ComboBox x:Name="StatusComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="EquipmentStatusID"/>

            <TextBlock Text="График профилактики" Margin="0,10,0,0"/>
            <TextBox x:Name="MaintenanceTextBox"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Height="25" Click="Save_Click"/>
                <Button Content="Отмена" Width="100" Height="25" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>