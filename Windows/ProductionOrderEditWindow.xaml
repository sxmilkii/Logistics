<Window x:Class="LogisticsWPF.Windows.ProductionOrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказ на производство"
        Width="400"
        Height="454"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <StackPanel Margin="20">

        <TextBlock Text="Клиент"/>
        <ComboBox x:Name="ClientComboBox" DisplayMemberPath="Name" SelectedValuePath="ClientID"/>

        <TextBlock Text="Продукт" Margin="0,10,0,0"/>
        <ComboBox x:Name="ProductComboBox" DisplayMemberPath="Name" SelectedValuePath="ProductID"/>

        <TextBlock Text="Количество" Margin="0,10,0,0"/>
        <TextBox x:Name="QuantityTextBox"/>

        <TextBlock Text="Приоритет" Margin="0,10,0,0"/>
        <ComboBox x:Name="PriorityComboBox">
            <ComboBoxItem Content="Низкий" Tag="1"/>
            <ComboBoxItem Content="Средний" Tag="2"/>
            <ComboBoxItem Content="Высокий" Tag="3"/>
        </ComboBox>

        <TextBlock Text="Дедлайн" Margin="0,10,0,0"/>
        <DatePicker x:Name="DeadlinePicker"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="100" Height="25" Click="Save_Click"/>
            <Button Content="Отмена" Width="100" Height="25" Margin="10,0,0,0" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>