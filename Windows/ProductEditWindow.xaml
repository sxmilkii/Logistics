<Window x:Class="LogisticsWPF.Windows.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование продукта" Height="417" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Артикул:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ArticleTextBox" Margin="5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="NameTextBox" Margin="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CategoryComboBox" DisplayMemberPath="Name" SelectedValuePath="ProductCategoryID" Margin="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Ед. изм.:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="UnitComboBox" DisplayMemberPath="Name" SelectedValuePath="UnitID" Margin="5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="StatusComboBox" DisplayMemberPath="Name" SelectedValuePath="ProductStatusID" Margin="5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Описание:" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="DescriptionTextBox" Margin="5,13,5,127" AcceptsReturn="True"/>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,64,0,0">
            <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click" Height="37"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click" Height="37"/>
        </StackPanel>
    </Grid>
</Window>